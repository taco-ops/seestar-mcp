# SeestarS50 MCP Configuration Example
# Copy this file to config.env and modify as needed

# Telescope connection settings
SEESTAR_HOST=192.168.1.100
SEESTAR_PORT=4700
SEESTAR_TIMEOUT=45.0  # Increased from 30 for better stability

# Telescope Location (REQUIRED for accurate coordinate calculations)
# Replace with your actual telescope location for proper timezone and horizon checks
TELESCOPE_LATITUDE=34.0522          # Latitude in degrees (-90 to +90, positive = North)
TELESCOPE_LONGITUDE=-118.2437       # Longitude in degrees (-180 to +180, positive = East)
TELESCOPE_ELEVATION=100             # Elevation in meters above sea level
TELESCOPE_TIMEZONE=America/Los_Angeles  # IANA timezone name

# Common locations (uncomment and modify as needed):
# Los Angeles, CA:    TELESCOPE_LATITUDE=34.0522  TELESCOPE_LONGITUDE=-118.2437  TELESCOPE_TIMEZONE=America/Los_Angeles
# New York, NY:       TELESCOPE_LATITUDE=40.7128  TELESCOPE_LONGITUDE=-74.0060   TELESCOPE_TIMEZONE=America/New_York
# London, UK:         TELESCOPE_LATITUDE=51.5074  TELESCOPE_LONGITUDE=-0.1278    TELESCOPE_TIMEZONE=Europe/London
# Tokyo, Japan:       TELESCOPE_LATITUDE=35.6762  TELESCOPE_LONGITUDE=139.6503   TELESCOPE_TIMEZONE=Asia/Tokyo
# Sydney, Australia:  TELESCOPE_LATITUDE=-33.8688 TELESCOPE_LONGITUDE=151.2093   TELESCOPE_TIMEZONE=Australia/Sydney

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=seestar_mcp.log

# Target resolution settings
CACHE_TARGET_RESULTS=true
TARGET_CACHE_SIZE=1000

# MCP server settings
MCP_SERVER_NAME=seestar-mcp
MCP_SERVER_VERSION=0.1.0

# Connection stability settings
CONNECTION_RETRY_COUNT=10  # Increased from 3
HEARTBEAT_INTERVAL=30      # Send heartbeat every 30 seconds
CONNECTION_TIMEOUT=120     # Consider connection stale after 2 minutes

# Development settings (only for development)
DEV_MODE=false
DEV_AUTO_CONNECT=false
DEV_MOCK_TELESCOPE=false
